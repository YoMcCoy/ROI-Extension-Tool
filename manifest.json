{
  "manifest_version": 3,
  "name": "ROI Tool Extension",
  "version": "0.3.5",
  "description": "Shows annualized ROI on Yahoo options chains and popup.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://finance.yahoo.com/quote/*/options*",
    "https://financialmodelingprep.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://finance.yahoo.com/quote/*/options*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ]
}